<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_jes" model="ir.ui.view">
        <field name="name">res.users.form.jes</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="JES">
                    <group>
                        <field name="is_signature" widget="image"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
