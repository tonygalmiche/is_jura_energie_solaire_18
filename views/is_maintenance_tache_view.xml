<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Formulaire Type de tâche (liées à une maintenance) -->
    <record id="view_is_maintenance_type_tache_form" model="ir.ui.view">
        <field name="name">is.maintenance.type.tache.form</field>
        <field name="model">is.maintenance.type.tache</field>
        <field name="arch" type="xml">
            <form string="Type de tâche de maintenance">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="maintenance_id" invisible="not maintenance_id"/>
                            <field name="centrale_id" invisible="not maintenance_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="numero_ordre" invisible="not numero_ordre"/>
                            <field name="onduleur_id" invisible="not onduleur_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tâches">
                            <field name="tache_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="etat_actuel"/>
                                    <field name="validation_etat"/>
                                    <field name="mesure_correction"/>
                                    <field name="validation_mesure"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Formulaire pour Configuration (modèles sans maintenance) -->
    <record id="view_is_maintenance_type_tache_config_form" model="ir.ui.view">
        <field name="name">is.maintenance.type.tache.config.form</field>
        <field name="model">is.maintenance.type.tache</field>
        <field name="arch" type="xml">
            <form string="Modèle de type de tâche">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="is_type_champs_photovoltaique"/>
                            <field name="is_type_coffret_dc"/>
                            <field name="is_type_onduleur"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tâches">
                            <field name="tache_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Liste Type de tâche (liées à une maintenance) -->
    <record id="view_is_maintenance_type_tache_tree" model="ir.ui.view">
        <field name="name">is.maintenance.type.tache.list</field>
        <field name="model">is.maintenance.type.tache</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="maintenance_id" widget="many2one_clickable"/>
                <field name="centrale_id" widget="many2one_clickable"/>
                <field name="name"/>
                <field name="onduleur_id"/>
                <field name="numero_ordre"/>
            </list>
        </field>
    </record>

    <!-- Vue Liste pour Configuration (modèles sans maintenance) -->
    <record id="view_is_maintenance_type_tache_config_tree" model="ir.ui.view">
        <field name="name">is.maintenance.type.tache.config.list</field>
        <field name="model">is.maintenance.type.tache</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_type_champs_photovoltaique"/>
                <field name="is_type_coffret_dc"/>
                <field name="is_type_onduleur"/>
            </list>
        </field>
    </record>

    <!-- Vue Recherche Type de tâche -->
    <record id="view_is_maintenance_type_tache_search" model="ir.ui.view">
        <field name="name">is.maintenance.type.tache.search</field>
        <field name="model">is.maintenance.type.tache</field>
        <field name="arch" type="xml">
            <search string="Recherche Type de tâche">
                <field name="name"/>
                <field name="centrale_id"/>
                <field name="maintenance_id"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Centrale" name="group_centrale" context="{'group_by': 'centrale_id'}"/>
                    <filter string="Maintenance" name="group_maintenance" context="{'group_by': 'maintenance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les types de tâches liées à une maintenance -->
    <record id="action_is_maintenance_type_tache" model="ir.actions.act_window">
        <field name="name">Types de tâches de maintenance</field>
        <field name="res_model">is.maintenance.type.tache</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('maintenance_id', '!=', False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_is_maintenance_type_tache_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_is_maintenance_type_tache_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun type de tâche lié à une maintenance
            </p>
        </field>
    </record>

    <!-- Action pour la configuration des modèles -->
    <record id="action_is_maintenance_type_tache_config" model="ir.actions.act_window">
        <field name="name">Configuration des types de tâches</field>
        <field name="res_model">is.maintenance.type.tache</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('maintenance_id', '=', False)]</field>
        <field name="context">{'default_maintenance_id': False}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_is_maintenance_type_tache_config_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_is_maintenance_type_tache_config_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un modèle de type de tâche
            </p>
            <p>Ces modèles serviront de base pour créer les tâches sur les fiches de maintenance.</p>
        </field>
    </record>

</odoo>
