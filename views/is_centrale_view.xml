    <record id="view_is_centrale_affaire_form" model="ir.ui.view">
        <field name="name">is.centrale.affaire.form</field>
        <field name="model">is.centrale.affaire</field>
        <field name="arch" type="xml">
            <form string="Affaire">
                <header>
                    <button name="action_view_centrales" string="Voir les centrales" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="puissance_panneau_totale"/>
                        <field name="formule_id"/>
                        <field name="euro_par_kwc"/>
                        <field name="forfait"/>
                    </group>
                    <group string="Centrales associÃ©es">
