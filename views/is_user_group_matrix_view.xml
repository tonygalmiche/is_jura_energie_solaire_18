<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Pivot -->
    <record id="view_is_user_group_matrix_pivot" model="ir.ui.view">
        <field name="name">is.user.group.matrix.pivot</field>
        <field name="model">is.user.group.matrix</field>
        <field name="arch" type="xml">
            <pivot string="Matrice Utilisateurs / Groupes" default_order="user_id">
                <field name="user_id" type="col"/>
                <field name="group_full_name" type="row"/>
                <field name="count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Liste -->
    <record id="view_is_user_group_matrix_list" model="ir.ui.view">
        <field name="name">is.user.group.matrix.list</field>
        <field name="model">is.user.group.matrix</field>
        <field name="arch" type="xml">
            <list string="Matrice Utilisateurs / Groupes" create="false" edit="false" delete="false">
                <button name="action_open_user" type="object" string="Ouvrir" icon="fa-external-link" class="btn-link"/>
                <field name="user_id"/>
                <field name="group_id" widget="many2one_clickable"/>
            </list>
        </field>
    </record>

    <!-- Vue Recherche -->
    <record id="view_is_user_group_matrix_search" model="ir.ui.view">
        <field name="name">is.user.group.matrix.search</field>
        <field name="model">is.user.group.matrix</field>
        <field name="arch" type="xml">
            <search string="Rechercher">
                <field name="user_id"/>
                <field name="group_full_name"/>
                <field name="group_id"/>
                <field name="category_id"/>
                <group expand="0" string="Grouper par">
                    <filter string="Utilisateur" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Groupe" name="group_group" context="{'group_by': 'group_full_name'}"/>
                    <filter string="Catégorie" name="group_category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_is_user_group_matrix" model="ir.actions.act_window">
        <field name="name">Matrice Utilisateurs / Groupes</field>
        <field name="res_model">is.user.group.matrix</field>
        <field name="view_mode">pivot,list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Matrice des utilisateurs et de leurs groupes
            </p>
            <p>
                Ce tableau croisé affiche les utilisateurs en ligne et les groupes en colonne.
                Cliquez sur un chiffre pour voir le détail, puis utilisez les boutons pour modifier l'utilisateur ou le groupe.
            </p>
        </field>
    </record>

    <!-- Menu dans Paramètres / Utilisateurs -->
    <menuitem id="menu_is_user_group_matrix"
        name="Matrice Utilisateurs / Groupes"
        parent="base.menu_users"
        action="action_is_user_group_matrix"
        sequence="10"/>
</odoo>
